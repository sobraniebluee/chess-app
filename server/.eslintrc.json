{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "browser": false
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": ["./tsconfig.json"] },
  "rules": {
    "semi": "warn",
    "quotes": ["error", "double"],
    "no-console": ["error", { "allow": ["warn"] }]
  }
}